<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@color/md_theme_light_surface">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_launcher_foreground"
                app:tint="@color/md_theme_light_primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_light_onSurface"
                android:text="Product Details"
                android:layout_marginStart="16dp" />

            <ImageView
                android:id="@+id/favoriteButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/favorite"
                android:src="@drawable/ic_launcher_foreground"
                app:tint="@color/md_theme_light_onSurface" />

        </LinearLayout>

        <!-- Loading Progress Bar -->
        <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone" />

        <!-- Image Carousel -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/md_theme_light_surfaceVariant">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/imageViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Page Indicator -->
            <LinearLayout
                android:id="@+id/pageIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/gradient_overlay" />

        </FrameLayout>

        <!-- Thumbnail Images (if multiple images) -->
        <HorizontalScrollView
            android:id="@+id/thumbnailContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:id="@+id/thumbnailLayout"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center_vertical" />

        </HorizontalScrollView>

        <!-- Product Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Product Name and Stock Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_onSurface"
                    android:maxLines="3"
                    android:ellipsize="end" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="@color/md_theme_light_onSurfaceVariant">
                        <![CDATA[Rating: ]]>
                    </TextView>

                    <TextView
                        android:id="@+id/productRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/md_theme_light_primary"
                        android:text="4.5" />

                    <TextView
                        android:id="@+id/reviewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/md_theme_light_onSurfaceVariant"
                        android:layout_marginStart="4dp"
                        android:text="(0 reviews)" />

                </LinearLayout>

            </LinearLayout>

            <!-- Seller Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bottom_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/md_theme_light_onSurfaceVariant"
                    android:text="Sold by: " />

                <TextView
                    android:id="@+id/sellerName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_primary"
                    android:layout_marginStart="4dp"
                    android:text="Loading..." />

            </LinearLayout>

            <!-- Price -->
            <TextView
                android:id="@+id/productPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_light_primary"
                android:text="â‚±0.00"
                android:layout_marginBottom="12dp" />

            <!-- Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bottom_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_onSurface"
                    android:text="Description"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/productDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/md_theme_light_onSurfaceVariant"
                    android:lineSpacingMultiplier="1.3" />

            </LinearLayout>

            <!-- Materials Used -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bottom_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_onSurface"
                    android:text="Materials Used"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/materialsUsed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/md_theme_light_onSurfaceVariant" />

            </LinearLayout>

            <!-- Stock Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bottom_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_onSurface"
                    android:text="In Stock: " />

                <TextView
                    android:id="@+id/stockCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_primary"
                    android:text="0" />

            </LinearLayout>

            <!-- Add to Cart Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bottom_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_onSurface"
                    android:text="Quantity:"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <Button
                        android:id="@+id/decrementQuantity"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:text="-"
                        android:textSize="18sp"
                        android:background="@drawable/button_outline" />

                    <EditText
                        android:id="@+id/quantityInput"
                        android:layout_width="60dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:inputType="number"
                        android:text="1"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:background="@drawable/input_background" />

                    <Button
                        android:id="@+id/incrementQuantity"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:text="+"
                        android:textSize="18sp"
                        android:background="@drawable/button_outline" />

                </LinearLayout>

            </LinearLayout>

            <!-- Add to Cart and Buy Now Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:spacing="8dp"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/addToCartButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Add to Cart"
                    android:textColor="@color/md_theme_light_onPrimary"
                    android:background="@color/md_theme_light_primary" />

                <Button
                    android:id="@+id/buyNowButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Buy Now"
                    android:textColor="@color/md_theme_light_primary"
                    android:background="@drawable/button_outline" />

            </LinearLayout>

        </LinearLayout>

        <!-- Reviews Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/md_theme_light_surface"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_light_onSurface"
                android:text="Customer Reviews"
                android:layout_marginBottom="12dp" />

            <!-- Reviews RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reviewsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" />

            <!-- No Reviews Message -->
            <TextView
                android:id="@+id/noReviewsMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/md_theme_light_onSurfaceVariant"
                android:text="No reviews yet. Be the first to leave one!"
                android:textAlignment="center"
                android:visibility="gone" />

            <!-- Reviews Loading -->
            <ProgressBar
                android:id="@+id/reviewsLoadingProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
