<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg_primary"
    android:orientation="vertical">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/dark_bg_secondary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingEnd="12dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_back"
            android:padding="12dp" />

        <TextView
            android:id="@+id/formTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="Add Product"
            android:textColor="@color/dark_text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:backgroundTint="@color/amber_600"
            android:paddingHorizontal="20dp"
            android:text="Save"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Saving progress bar (indeterminate, shown while API call is in flight) -->
    <ProgressBar
        android:id="@+id/savingProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/amber_600"
        android:visibility="gone" />

    <!-- Scrollable form content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- â”€â”€ Basic Info â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Information"
                android:textColor="@color/amber_600"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <!-- Product Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:hint="Product Name *"
                app:boxBackgroundColor="@color/dark_bg_secondary"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@color/dark_text_secondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/productNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:textColor="@color/dark_text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Description -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:hint="Description *"
                app:boxBackgroundColor="@color/dark_bg_secondary"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@color/dark_text_secondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/productDescriptionInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="4"
                    android:textColor="@color/dark_text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Price + Stock row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="14dp">

                <!-- Price -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:hint="Price (â‚±) *"
                    app:boxBackgroundColor="@color/dark_bg_secondary"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/dark_text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/productPriceInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@color/dark_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Stock -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Stock Qty *"
                    app:boxBackgroundColor="@color/dark_bg_secondary"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/dark_text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/productStockInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@color/dark_text_primary" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Category -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:hint="Category *"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:boxBackgroundColor="@color/dark_bg_secondary"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@color/dark_text_secondary">

                <AutoCompleteTextView
                    android:id="@+id/productCategoryInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:textColor="@color/dark_text_primary"
                    android:completionThreshold="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Materials Used -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="Materials Used (optional)"
                app:boxBackgroundColor="@color/dark_bg_secondary"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@color/dark_text_secondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/productMaterialsInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:textColor="@color/dark_text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- â”€â”€ Product Image â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_surface"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Image"
                android:textColor="@color/amber_600"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <!-- Image preview -->
            <ImageView
                android:id="@+id/productImagePreview"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:background="@drawable/card_background"
                android:contentDescription="Product image preview"
                android:layout_marginBottom="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/noImagePlaceholder"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="No image selected"
                android:textColor="@color/dark_text_secondary"
                android:textSize="13sp"
                android:background="@drawable/card_background"
                android:layout_marginBottom="10dp" />

            <!-- Image URL input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Image URL (optional)"
                app:boxBackgroundColor="@color/dark_bg_secondary"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@color/dark_text_secondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/productImageUrlInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:textColor="@color/dark_text_primary" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/previewImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preview Image"
                android:textSize="12sp"
                android:backgroundTint="@color/dark_bg_secondary"
                android:layout_marginBottom="20dp" />

            <!-- â”€â”€ Delivery Methods â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_surface"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Methods"
                android:textColor="@color/amber_600"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note: These override your profile defaults for this product."
                android:textColor="@color/dark_text_secondary"
                android:textSize="11sp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/allowShippingCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:buttonTint="@color/amber_600" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸšš Allow Shipping"
                        android:textColor="@color/dark_text_primary"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buyers can order with local delivery"
                        android:textColor="@color/dark_text_secondary"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <CheckBox
                    android:id="@+id/allowPickupCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:buttonTint="@color/amber_600" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸª Allow Store Pickup"
                        android:textColor="@color/dark_text_primary"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buyers can pick up from your shop"
                        android:textColor="@color/dark_text_secondary"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Bottom Save button (convenience second button) -->
            <Button
                android:id="@+id/saveButtonBottom"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:backgroundTint="@color/amber_600"
                android:text="Save Product"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
