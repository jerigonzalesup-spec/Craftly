<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_bg_primary"
    tools:context=".products.presentation.ui.ProductDetailActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="16dp"
        android:background="@color/dark_bg_secondary">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="&#x2190;"
            android:textSize="20sp"
            android:textColor="@color/dark_text_primary"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="24dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Product Details"
            android:textColor="@color/dark_text_primary"
            android:textSize="17sp"
            android:textStyle="bold"
            android:gravity="center" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Product Image -->
            <FrameLayout
                android:id="@+id/productContent"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/dark_bg_secondary">

                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Product Image" />

                <!-- Out of Stock Overlay -->
                <FrameLayout
                    android:id="@+id/outOfStockOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#99000000"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Out of Stock"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:background="@drawable/card_background"
                        android:padding="14dp" />
                </FrameLayout>

                <!-- Your Product badge -->
                <TextView
                    android:id="@+id/yourProductBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_margin="12dp"
                    android:text="Your Product"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/category_chip_background"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:visibility="gone" />

                <!-- Favorite button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/favoriteButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="12dp"
                    android:text="&#x2661;"
                    android:textSize="22sp"
                    android:textColor="@color/red_500"
                    android:padding="0dp"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="24dp"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />
            </FrameLayout>

            <!-- Info card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/dark_bg_secondary"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="14dp">

                <!-- Name + Price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_text_primary"
                        android:layout_marginEnd="12dp"
                        tools:text="Handcrafted Ceramic Vase" />

                    <TextView
                        android:id="@+id/productPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/amber_600"
                        tools:text="&#x20B1; 1,200" />
                </LinearLayout>

                <!-- Rating + Sales -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/ratingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/yellow_400"
                        android:layout_marginEnd="12dp"
                        tools:text="&#x2605; 4.5  (23 reviews)" />

                    <TextView
                        android:id="@+id/salesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/dark_text_secondary"
                        tools:text="425 sold" />
                </LinearLayout>

                <!-- Category + Seller -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/productCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/category_chip_background"
                        android:textColor="@color/white"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textSize="11sp"
                        android:layout_marginEnd="8dp"
                        tools:text="Ceramics" />

                    <TextView
                        android:id="@+id/sellerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/dark_text_secondary"
                        tools:text="by John Doe" />
                </LinearLayout>

                <!-- Stock -->
                <TextView
                    android:id="@+id/stockStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_400"
                    tools:text="25 in stock" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="8dp" android:background="@color/dark_bg_primary" />

            <!-- Delivery & Payment -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/dark_bg_secondary"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery &amp; Payment"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_text_primary"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/shippingBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#x1F69A; Shipping"
                        android:textColor="@color/blue_400"
                        android:background="@drawable/card_background"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/pickupBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#x1F3EA; Pickup"
                        android:textColor="@color/green_400"
                        android:background="@drawable/card_background"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:visibility="gone"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#x1F4B3; COD"
                        android:textColor="@color/amber_600"
                        android:background="@drawable/card_background"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginEnd="8dp"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#x1F4F1; GCash"
                        android:textColor="@color/blue_400"
                        android:background="@drawable/card_background"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="8dp" android:background="@color/dark_bg_primary" />

            <!-- Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/dark_bg_secondary"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/productDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:textColor="@color/dark_text_secondary"
                    tools:text="Hand-crafted ceramic vase with unique glaze pattern." />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="8dp" android:background="@color/dark_bg_primary" />

            <!-- Materials -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/dark_bg_secondary"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Materials Used"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_text_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/materialsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:textColor="@color/dark_text_secondary"
                    tools:text="Ceramic clay, high-fired glaze" />
            </LinearLayout>

            <!-- Loading indicator -->
            <ProgressBar
                android:id="@+id/loadingProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="32dp"
                android:visibility="gone" />

            <!-- Error state -->
            <LinearLayout
                android:id="@+id/errorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/red_500"
                    android:layout_marginBottom="16dp"
                    tools:text="Failed to load product" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retry" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Action Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/dark_bg_secondary"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        android:elevation="8dp">

        <!-- Quantity Selector -->
        <LinearLayout
            android:id="@+id/quantityContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textColor="@color/dark_text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/decreaseQuantityButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="&#x2212;"
                android:textSize="18sp"
                android:textColor="@color/amber_600"
                android:padding="0dp"
                app:cornerRadius="6dp"
                app:backgroundTint="@color/dark_bg_primary"
                app:strokeColor="@color/amber_600"
                app:strokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <!-- Plain TextView for quantity â€” no hint clipping -->
            <TextView
                android:id="@+id/quantityInput"
                android:layout_width="48dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/dark_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/card_background" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/increaseQuantityButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="+"
                android:textSize="18sp"
                android:textColor="@color/amber_600"
                android:padding="0dp"
                app:cornerRadius="6dp"
                app:backgroundTint="@color/dark_bg_primary"
                app:strokeColor="@color/amber_600"
                app:strokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <Space android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />

            <TextView
                android:id="@+id/availableStockText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_text_secondary"
                android:textSize="12sp"
                tools:text="25 available" />
        </LinearLayout>

        <!-- Add to Cart / Buy Now -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addToCartButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Add to Cart"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                app:backgroundTint="@color/dark_bg_primary"
                app:strokeColor="@color/amber_600"
                app:strokeWidth="2dp"
                app:cornerRadius="10dp"
                android:textColor="@color/amber_600" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buyNowButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Buy Now"
                android:textSize="14sp"
                app:backgroundTint="@color/amber_600"
                app:cornerRadius="10dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Manage Product (own products) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/manageProductButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:text="Manage Product"
            android:textSize="14sp"
            android:visibility="gone"
            app:backgroundTint="@color/dark_bg_primary"
            app:strokeColor="@color/amber_600"
            app:strokeWidth="2dp"
            app:cornerRadius="10dp"
            android:textColor="@color/amber_600"
            app:icon="@drawable/ic_edit"
            app:iconSize="18dp"
            app:iconTint="@color/amber_600"
            app:iconPadding="8dp" />
    </LinearLayout>
</LinearLayout>
