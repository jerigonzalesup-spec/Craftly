<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/dark_bg_secondary"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/sellerProductImage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:background="@color/dark_bg_primary"
            android:contentDescription="Product image"
            tools:src="@color/dark_bg_primary" />

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/sellerProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/dark_text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Hand-crafted Ceramic Vase" />

            <TextView
                android:id="@+id/sellerProductCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/dark_text_secondary"
                android:textSize="11sp"
                tools:text="Pottery" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/sellerProductPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/amber_600"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:text="â‚± 1,200" />

                <TextView
                    android:id="@+id/sellerProductStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_text_secondary"
                    android:textSize="11sp"
                    tools:text="10 in stock" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editProductButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="64dp"
                android:layout_height="36dp"
                android:text="Edit"
                android:textSize="11sp"
                app:strokeColor="@color/amber_600"
                android:textColor="@color/amber_600"
                app:cornerRadius="6dp"
                android:layout_marginBottom="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteProductButton"
                android:layout_width="64dp"
                android:layout_height="36dp"
                android:text="Del"
                android:textSize="11sp"
                app:backgroundTint="@color/red_500"
                app:cornerRadius="6dp"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
