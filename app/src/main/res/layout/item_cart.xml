<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/dark_bg_secondary"
    app:cardCornerRadius="14dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/cartItemImage"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:contentDescription="Cart item image"
            android:scaleType="centerCrop"
            android:background="@drawable/card_background"
            tools:src="@color/dark_bg_primary" />

        <!-- Product Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="4dp">

            <!-- Product Name -->
            <TextView
                android:id="@+id/cartItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/dark_text_primary"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                tools:text="Hand-crafted Ceramic Vase" />

            <!-- Category chip + Price row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/cartItemCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/category_chip_background"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginEnd="8dp"
                    tools:text="Ceramics" />

                <TextView
                    android:id="@+id/cartItemPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/amber_600"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:text="₱ 1,200" />
            </LinearLayout>

            <!-- Quantity Controls row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Decrease button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/decreaseButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:text="−"
                    android:textSize="16sp"
                    android:textColor="@color/dark_text_primary"
                    android:padding="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:strokeColor="@color/dark_surface"
                    app:strokeWidth="1dp"
                    app:cornerRadius="8dp"
                    app:backgroundTint="@color/dark_surface"
                    app:rippleColor="@color/amber_600" />

                <TextView
                    android:id="@+id/quantityText"
                    android:layout_width="36dp"
                    android:layout_height="34dp"
                    android:gravity="center"
                    android:textColor="@color/dark_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Increase button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/increaseButton"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:text="+"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:padding="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="8dp"
                    app:backgroundTint="@color/amber_600"
                    app:rippleColor="@color/amber_700" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Item Total -->
                <TextView
                    android:id="@+id/itemTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/amber_600"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="₱ 2,400" />
            </LinearLayout>

            <!-- Remove Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/removeButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="6dp"
                android:text="Remove"
                android:textSize="11sp"
                android:textColor="@color/error_red"
                android:padding="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:rippleColor="@color/error_red"
                app:iconTint="@color/error_red" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
