<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/dark_bg_secondary"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/cartItemImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Cart item image"
            android:scaleType="centerCrop"
            android:background="@drawable/card_background"
            tools:src="@color/dark_bg_primary" />

        <!-- Product Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <!-- Product Name -->
            <TextView
                android:id="@+id/cartItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="Product Name"
                android:textColor="@color/dark_text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                tools:text="Hand-crafted Ceramic Vase" />

            <!-- Category and Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/cartItemCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/category_chip_background"
                    android:text="Category"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginEnd="8dp"
                    tools:text="Ceramics" />

                <TextView
                    android:id="@+id/cartItemPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₱ 1,200"
                    android:textColor="@color/amber_600"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:text="₱ 1,200" />
            </LinearLayout>

            <!-- Quantity Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/decreaseButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="-"
                    android:textSize="16sp"
                    android:padding="0dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/quantityText"
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:text="1"
                    android:textColor="@color/dark_text_primary"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/increaseButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="+"
                    android:textSize="16sp"
                    android:padding="0dp"
                    android:layout_marginEnd="16dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Item Total -->
                <TextView
                    android:id="@+id/itemTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₱ 1,200"
                    android:textColor="@color/amber_600"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="₱ 2,400" />
            </LinearLayout>

            <!-- Remove Button -->
            <Button
                android:id="@+id/removeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:textSize="11sp"
                android:padding="4dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
