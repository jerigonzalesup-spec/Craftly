<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg_primary"
    android:orientation="vertical"
    tools:context=".checkout.presentation.ui.CheckoutActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/dark_bg_secondary">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="â†"
            android:textSize="20sp"
            app:backgroundTint="@color/dark_bg_primary"
            app:cornerRadius="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Checkout"
            android:textColor="@color/dark_text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingStart="16dp" />
    </LinearLayout>

    <!-- Checkout Form -->
    <ScrollView
        android:id="@+id/checkoutForm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- Cart Summary -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Summary"
                    android:textColor="@color/dark_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Items:"
                        android:textColor="@color/dark_text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/itemCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 item(s)"
                        android:textColor="@color/dark_text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="3 item(s)" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subtotal:"
                        android:textColor="@color/dark_text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/subtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚± 0"
                        android:textColor="@color/dark_text_primary"
                        android:textSize="14sp"
                        tools:text="â‚± 5,400" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_text_secondary"
                    android:alpha="0.2"
                    android:layout_marginVertical="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total:"
                        android:textColor="@color/amber_600"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cartTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚± 0"
                        android:textColor="@color/amber_600"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="â‚± 5,400" />
                </LinearLayout>
            </LinearLayout>

            <!-- Recipient Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipient Details"
                android:textColor="@color/dark_text_primary"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/recipientName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact Number"
                    android:inputType="phone" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Delivery Method -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Method"
                android:textColor="@color/dark_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <RadioGroup
                android:id="@+id/deliveryMethodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/localDeliveryRadio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸšš Local Delivery  (+â‚±50.00)"
                    android:textColor="@color/dark_text_primary"
                    android:paddingVertical="10dp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/storePickupRadio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸª Store Pickup  (Free)"
                    android:textColor="@color/dark_text_primary"
                    android:paddingVertical="10dp" />
            </RadioGroup>

            <!-- Shipping Address Section (shown only for Local Delivery) -->
            <LinearLayout
                android:id="@+id/shippingAddressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipping Address"
                    android:textColor="@color/dark_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/streetAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Street Address"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/barangay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Barangay"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="City"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/postalCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Postal Code"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Country"
                        android:inputType="text"
                        android:text="Philippines" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Payment Method -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:textColor="@color/dark_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <RadioGroup
                android:id="@+id/paymentMethodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/codRadio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’µ Cash on Delivery (COD)"
                    android:textColor="@color/dark_text_primary"
                    android:paddingVertical="10dp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/gcashRadio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“± GCash Payment"
                    android:textColor="@color/dark_text_primary"
                    android:paddingVertical="10dp" />
            </RadioGroup>

            <!-- GCash Details (hidden by default) - shows SELLER's GCash info + receipt upload -->
            <LinearLayout
                android:id="@+id/gcashDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GCash Payment Instructions"
                    android:textColor="@color/dark_text_primary"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Loading state while fetching seller profile -->
                <ProgressBar
                    android:id="@+id/gcashInfoLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <!-- Seller's GCash info (shown after loading) -->
                <LinearLayout
                    android:id="@+id/gcashSellerInfoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send payment to:"
                        android:textColor="@color/dark_text_secondary"
                        android:textSize="13sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/gcashSellerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        tools:text="Account Name: Juan Dela Cruz" />

                    <TextView
                        android:id="@+id/gcashSellerNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/amber_600"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        tools:text="GCash Number: 09XX XXX XXXX" />
                </LinearLayout>

                <!-- Seller has no GCash details message -->
                <TextView
                    android:id="@+id/gcashNotAvailableText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seller has not set up GCash. Please choose Cash on Delivery."
                    android:textColor="#EF4444"
                    android:textSize="13sp"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp" />

                <!-- Receipt upload section -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_text_secondary"
                    android:alpha="0.2"
                    android:layout_marginVertical="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload your payment receipt:"
                    android:textColor="@color/dark_text_secondary"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/pickReceiptButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="ðŸ“Ž Select Receipt Image"
                    android:textSize="13sp"
                    app:backgroundTint="@color/dark_bg_primary"
                    app:cornerRadius="8dp"
                    android:textColor="@color/dark_text_primary"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

                <!-- Receipt file name preview -->
                <LinearLayout
                    android:id="@+id/receiptPreviewContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/receiptFileName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/dark_text_secondary"
                        android:textSize="12sp"
                        tools:text="Selected: receipt_photo.jpg" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Success Container -->
    <LinearLayout
        android:id="@+id/successContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ“"
            android:textSize="60sp"
            android:textColor="@color/green_400"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/successMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Placed Successfully"
            android:textColor="@color/dark_text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/successOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order #ABC12345"
            android:textColor="@color/dark_text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            tools:text="Order #XYZ67890" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueShoppingButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Continue Shopping"
            app:backgroundTint="@color/amber_600"
            app:cornerRadius="8dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- Bottom Action Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/dark_bg_secondary"
        android:padding="16dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/placeOrderButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Place Order"
            android:textSize="15sp"
            android:textStyle="bold"
            app:backgroundTint="@color/amber_600"
            app:cornerRadius="10dp"
            android:textColor="@color/white"
            app:rippleColor="@color/amber_700" />
    </LinearLayout>
</LinearLayout>
