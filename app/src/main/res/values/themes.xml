<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/amber_600</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/red_500</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Tertiary (for accents) -->
        <item name="colorTertiary">@color/amber_700</item>
        <item name="colorOnTertiary">@color/white</item>

        <!-- Surface colors (dark mode) -->
        <item name="android:colorBackground">@color/dark_bg_primary</item>
        <item name="colorSurface">@color/dark_bg_secondary</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>

        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>

        <!-- Remove action bar -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />
</resources>