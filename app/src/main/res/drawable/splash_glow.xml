<?xml version="1.0" encoding="utf-8"?>
<!-- Soft amber radial glow for the splash screen center -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <gradient
        android:type="radial"
        android:gradientRadius="200dp"
        android:centerX="0.5"
        android:centerY="0.5"
        android:startColor="#3DD97706"
        android:endColor="#00D97706" />
    <size
        android:width="400dp"
        android:height="400dp" />
</shape>
