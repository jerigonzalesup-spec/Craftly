<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!--
        Craftly Logo — foreground layer (transparent background)
        Design: Bold white "C" arc + crafter's needle with eye
        C arc: center (54,54), radius 24, opens to the right (~270° arc)
        Needle: needle tip pointing up-right from the top opening of the C
    -->

    <!-- Drop shadow (soft, dark, offset slightly down-right) -->
    <path
        android:pathData="M71.5,37.5 A24,24 0 1,0 71.5,71.5"
        android:strokeWidth="9.5"
        android:strokeColor="#33000000"
        android:fillColor="#00000000"
        android:strokeLineCap="round"
        android:translateX="0.8"
        android:translateY="1.2" />

    <!-- The "C" arc: sweeps ~270°, opens right -->
    <path
        android:pathData="M71,37 A24,24 0 1,0 71,71"
        android:strokeWidth="9"
        android:strokeColor="#FFFFFF"
        android:fillColor="#00000000"
        android:strokeLineCap="round" />

    <!-- Needle body — thin elongated dart pointing up-right -->
    <!-- Base near C top gap, tip at upper-right -->
    <path
        android:pathData="M67.8,35.2 L72.6,39.8 L84.5,22.5 Z"
        android:fillColor="#FFFFFF" />

    <!-- Needle eye hole — amber circle punched into the needle body -->
    <path
        android:pathData="M76.2,30.2 m-2.6,0 a2.6,2.6 0,1,0 5.2,0 a2.6,2.6 0,1,0 -5.2,0"
        android:fillColor="#D97706" />

    <!-- Thread line — thin amber line from eye down into the C arc opening -->
    <path
        android:pathData="M73.6,32.8 L70.5,36.5"
        android:strokeWidth="1.8"
        android:strokeColor="#FCD34D"
        android:fillColor="#00000000"
        android:strokeLineCap="round" />

</vector>